@model Picture

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Заголовок</label>
        <input type="text" class="form-control" id="Name" aria-describedby="emailHelp" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Краткое описание</label>
        <input type="text" class="form-control" id="Description" asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label><br />
        <input type="file" name="Image" />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>